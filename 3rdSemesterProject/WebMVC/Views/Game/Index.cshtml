@model IEnumerable<WebMVC.Models.Game>

@{
    ViewData["Title"] = "Games";
    string GenerateImagePath(int index){
        return "/images/game" + index%7 + ".jpg";
    }
    Game[] items = Model.ToArray();
}

<h1 style="padding-top:150px; text-align:center;">Games</h1>
<div class="gamelist"> 
    @for (int i=0; i<items.Length; i++)
        {
            <div class="gamelistitem">
                    <div class="gamelistimg"><a href="@Url.Action("Details","Game", new {id = items[i].GameID })"><img src="@GenerateImagePath(i)"/></a></div>
                    <div class="overlay">
                        <h2>@Html.DisplayFor(x => items[i].Title)</h2>
                        <p>Genre: @Html.DisplayFor(x => items[i].Type)</p>
                        <p>@Html.DisplayFor(x => items[i].YearOfRelease)</p>
                    </div>
                </div>
			}
</div>
