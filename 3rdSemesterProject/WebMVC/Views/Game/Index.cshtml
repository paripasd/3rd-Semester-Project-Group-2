@model IEnumerable<WebMVC.Models.Game>

@{
    ViewData["Title"] = "Games";
    string GenerateImagePath(int index){
        return "/images/game" + index%7 + ".jpg";
		}
}

<h1 style="padding-top:150px; text-align:center;">Games</h1>
<div class="gamelist"> 
    @for (int i=0; i<Model.Count(); i++)
        {
            <div class="gamelistitem">
                    <div class="gamelistimg"><a href="@Url.Action("Details","Game", new {id = Model.ToArray()[i].GameID })"><img src="@GenerateImagePath(i)"/></a></div>
                    <div class="overlay">
                        <h2>@Html.DisplayFor(x => Model.ToArray()[i].Title)</h2>
                        <p>Genre: @Html.DisplayFor(x => Model.ToArray()[i].Type)</p>
                        <p>Dev name @Html.DisplayFor(x => Model.ToArray()[i].YearOfRelease)</p>
                    </div>
                </div>
			}
</div>
